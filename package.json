{
  "name": "claude-voice",
  "version": "1.0.3",
  "description": "Voice interface extension for Claude Code - TTS, STT, and wake word detection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-voice": "./bin/claude-voice"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/postinstall.js",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "keywords": [
    "claude",
    "claude-code",
    "voice",
    "tts",
    "stt",
    "speech",
    "ai",
    "extension",
    "jarvis",
    "wake-word"
  ],
  "author": "Enes Sahin <menesahin99@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Menesahin/claude-voice-extension.git"
  },
  "homepage": "https://github.com/Menesahin/claude-voice-extension#readme",
  "bugs": {
    "url": "https://github.com/Menesahin/claude-voice-extension/issues"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "express": "^4.18.2",
    "inquirer": "^8.2.7",
    "openai": "^4.20.0",
    "ora": "^5.4.1",
    "sherpa-onnx-node": "^1.12.20"
  },
  "optionalDependencies": {
    "@picovoice/porcupine-node": "^4.0.1",
    "@picovoice/pvrecorder-node": "^1.2.8",
    "sherpa-onnx-darwin-arm64": "^1.12.20",
    "sherpa-onnx-darwin-x64": "^1.12.20",
    "sherpa-onnx-linux-x64": "^1.12.20",
    "sherpa-onnx-linux-arm64": "^1.12.20"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "files": [
    "bin/**/*",
    "dist/**/*",
    "hooks/**/*",
    "config/**/*",
    "scripts/**/*",
    "models/.gitkeep",
    "python/**/*",
    "README.md",
    "LICENSE"
  ]
}
