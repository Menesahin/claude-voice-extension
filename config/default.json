    "sensitivity": 0.5,
    "playSound": true,
    "keywords": {
      "jarvis": [
        "▁JA R VI S",
        "▁JA R V I S",
        "J AR VI S",
        "J A R VI S",
        "J A R V I S",
        "▁JA R V IS"
      ],
      "claude": [
        "▁C L A U DE",
        "▁C L A U D E",
        "C L A U DE",
        "C L A U D E",
        "▁C LA U DE",
        "C LA U D E"
      ]
    },
    "picovoice": {
      "accessKey": ""
    }
  },
  "notifications": {
    "enabled": false,
    "permissionPrompt": true,
    "idlePrompt": true,
    "errors": false,
    "customMessages": {
      "permissionPrompt": "Claude needs your permission.",
      "idlePrompt": "Claude is waiting for your input."
    }
  },
  "voiceOutput": {
    "enabled": false,
    "abstractMarker": "<!-- TTS -->",
    "maxAbstractLength": 200,
    "promptTemplate": null
  },
  "toolTTS": {
    "enabled": false,
    "mode": "summarize",
    "tools": {
      "Read": true,
      "Grep": true,
      "Glob": false,
      "Bash": true,
      "Write": true,
      "Edit": true,
      "MultiEdit": true,
      "WebFetch": false,
      "WebSearch": false,
      "Task": false,
      "default": false
    },
    "customMessages": {
      "completion": "Done.",
      "error": "Operation failed."
    },
    "announceErrors": true,
    "maxSummaryLength": 100
  },
  "shortcut": {
    "enabled": false,
    "key": "CommandOrControl+Shift+Space",
    "description": "Press to start voice recording (requires X11 on Linux)"
  },
  "terminal": {
    "injectionMethod": "auto",
    "targetTerminal": "auto",
    "pressEnterAfterInput": true
  },
  "recording": {
    "sampleRate": 16000,
    "channels": 1,
    "silenceThreshold": 2500,
    "silenceAmplitude": 500,
    "maxDuration": 60000
  },
  "server": {
    "port": 3456,
    "host": "127.0.0.1"
  },
  "debug": false
